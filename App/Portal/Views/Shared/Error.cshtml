@model System.Web.Mvc.HandleErrorInfo
@{
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
    ViewBag.Title = "Error";
}
<style>
    .text-danger {
        color: red;
    }
</style>
<div class="span12">
    <div class="widget-box">
        <div class="widget-title">
            <span class="icon"> <i class="icon-info-sign"></i> </span>
            <h5>Error 網站出錯了!</h5>
        </div>
        <div class="widget-content">
            <div class="error_ex">
                @if (Model != null)
                {
                    <p> <h5>請將以下代碼記下並告知資訊人員，以便加速您的問題處理。</h5></p>
                    <h1>@ViewBag.LogGuId</h1>
                    <h3>Opps, You Has Some Error.</h3>
                    <p class="text-danger">@Model.Exception.Message</p>
                    <a class="btn btn-warning btn-big" href="~/">Back to Home</a>
                }
            </div>
        </div>
    </div>
</div>